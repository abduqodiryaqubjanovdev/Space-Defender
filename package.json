{
  "name": "space-shooter",
  "version": "1.0.0",
  "description": "Modern Space Shooter Game",
  "main": "main.js",
  "author": "Sizning ismingiz",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.spaceshooter",
    "productName": "Space Shooter",
    "icon": "icon.ico",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.6.0"
  }
}
